{

    if ( -f '/var/run/.nethserver-upgrade-configdb') {
        $OUT .= "\n# Make sure running sshd port is open\n";
        my $ssh_port = `ss -nlp4t | grep sshd  | awk '{print \$4}' | cut -d':' -f 2`;
        $OUT .= "ACCEPT  -  \$FW  tcp  $ssh_port\n";
        $OUT .= "# Make sure standard httpd-admin port is open\n";
        $OUT .= "ACCEPT  -  \$FW  tcp  980\n";
    }
}
